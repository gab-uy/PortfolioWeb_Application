    <style>
        .skills-scroll {
            display: flex;
            overflow-x: auto;
            gap: 30px;
            padding: 20px 10px;
            scrollbar-width: none;
        }

            .skills-scroll::-webkit-scrollbar {
                display: none;
            }

        .skill-item {
            flex: 0 0 auto;
            text-align: center;
            color: #555;
            font-size: 13px;
            min-width: 40px;
        }

            /* keep icons grayscale by default */
            .skill-item img {
                width: 40px;
                height: 40px;
                filter: grayscale(100%) brightness(0) invert(0.7);
                margin-bottom: 8px;
                transition: transform 0.3s ease, filter 0.3s ease;
            }

                /* hover restores original color */
                .skill-item img:hover {
                    transform: scale(1.15);
                    filter: none;
                }

        /* proficiency bar styles */
        .proficiency-bar {
            height: 6px;
            border-radius: 4px;
            background: #ddd;
            margin-top: 6px;
            position: relative;
            overflow: hidden;
        }

            .proficiency-bar::after {
                content: "";
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                border-radius: 4px;
            }

            /* levels */
            .proficiency-bar.high::after {
                width: 90%;
                background: #333; /* dark gray */
            }

            .proficiency-bar.medium::after {
                width: 60%;
                background: #666;
            }

            .proficiency-bar.low::after {
                width: 30%;
                background: #aaa;
            }

        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .project-card {
            padding: 18px;
            border-radius: 14px;
            background: #f9f9f9;
            border: 1px solid #e0e0e0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .project-card h4 {
                display: flex;
                align-items: center;
                gap: 8px;
                font-size: 16px;
                margin-bottom: 8px;
                color: #333;
            }

                .project-card h4 img {
                    width: 18px;
                    height: 18px;
                    filter: grayscale(100%) brightness(0) invert(0.6); /* monochrome */
                    transition: filter 0.3s ease;
                }

            .project-card:hover h4 img {
                filter: none; /* show original stroke on hover */
            }

            .project-card p {
                font-size: 14px;
                color: #555;
                line-height: 1.4;
            }

            .project-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 14px rgba(0,0,0,0.08);
                background: #fff;
            }

        .interests-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 14px;
            margin-top: 16px;
        }

            .interests-tags span {
                display: flex;
                align-items: center;
                gap: 8px;
                background: #f0f0f0;
                border-radius: 20px;
                padding: 6px 14px;
                font-size: 14px;
                color: #333;
                transition: background 0.3s ease, transform 0.2s ease;
            }

                .interests-tags span img {
                    width: 18px;
                    height: 18px;
                    filter: grayscale(100%) brightness(0) invert(0.6); /* monochrome effect */
                    transition: filter 0.3s ease;
                }

                .interests-tags span:hover {
                    background: #e0e0e0;
                    transform: scale(1.05);
                }

                    .interests-tags span:hover img {
                        filter: none; /* show original colors on hover */
                    }
    </style>

